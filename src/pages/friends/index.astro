---
import AuthorCard from '@/components/AuthorCard.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllAuthors } from '@/lib/data-utils'
import '@fontsource/lxgw-wenkai';
const friends = await getAllAuthors()
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="友情链接" />
  <Breadcrumbs items={[{ label: '友情链接', icon: 'lucide:users' }]} />
  
  {
    friends.length > 0 ? (
      <ul class="flex flex-col gap-4">
        {friends.map((friend) => (
          <li>
            <AuthorCard friend={friend} />
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-muted-foreground text-center">暂无友情链接。</p>
    )
  }
</Layout>
